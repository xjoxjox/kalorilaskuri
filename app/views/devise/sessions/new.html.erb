<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center login-title">Kirjaudu sisÃ¤Ã¤n</h1>
    <div class="account-wall">

      <div class="text-center">
        <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

        <div class="btn-group">
          <a class='btn btn-danger disabled'><i class="fa fa-google-plus" style="width:16px; height:10px; margin-bottom:5px"></i></a>
          <%= link_to 'Kirjaudu Google-tunnuksilla', user_google_oauth2_omniauth_authorize_path,
                      :class => 'btn btn-danger', :style => "width:20em; margin-bottom:5px;color:white;" %>
        </div>
        <div class="btn-group">
          <a class='btn btn-primary disabled'><i class="fa fa-facebook" style="width:16px; height:10px; margin-bottom:5px"></i></a>
          <%= link_to 'Kirjaudu Facebook-tunnuksilla', user_facebook_omniauth_authorize_path,
                      :class => 'btn btn-primary', :style => "width:20em; margin-bottom:5px;color:white;" %>
        </div>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-signin"}) do |f| %>
          <div class="form-group">
            <%= f.label :email, class: "control-label" %>
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: "control-label" %>
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? -%>
              <div class="form-group">
                <div class="checkbox">
                  <label>
                    <%= f.check_box :remember_me %> Muista minut
                  </label>
                </div>
              </div>
          <% end %>

          <div class="form-group">
            <%= f.submit "Kirjaudu", class: "submit-button" %>
          </div>
      <% end %>
      <hr>
      <div class="shared-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>