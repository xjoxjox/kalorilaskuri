<%- if controller_name != 'sessions' %>
  <%= link_to "Kirjaudu sisään", new_session_path(resource_name), class: "links" %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Rekisteröidy", new_registration_path(resource_name), class: "links" %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Unohditko salasanasi?", new_password_path(resource_name), class: "links" %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Etkö saanut vahvistusviestiä?", new_confirmation_path(resource_name), class: "links" %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Etkö saanut viestiä kuinka avata lukittu tili?", new_unlock_path(resource_name), class: "links" %><br />
<% end -%>
