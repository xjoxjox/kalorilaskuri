<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center login-title">Rekisteröityminen</h1>
    <div class="account-wall">

      <div class="text-center">
        <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

        <div class="btn-group">
          <a class='btn btn-danger disabled'><i class="fa fa-google-plus" style="width:16px; height:10px; margin-bottom:5px"></i></a>
          <%= link_to 'Rekisteröidy Google-tunnuksilla', user_google_oauth2_omniauth_authorize_path,
                      :class => 'btn btn-danger', :style => "width:20em; margin-bottom:5px;color:white;" %>
        </div>
        <div class="btn-group">
          <a class='btn btn-primary disabled'><i class="fa fa-facebook" style="width:16px; height:10px; margin-bottom:5px"></i></a>
          <%= link_to 'Rekisteröidy Facebook-tunnuksilla', user_facebook_omniauth_authorize_path,
                      :class => 'btn btn-primary', :style => "width:20em; margin-bottom:5px;color:white;" %>
        </div>
      </div>

      <br /><br />
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-signup"}) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.hidden_field :weight, :value => 0 %>
            <%= f.hidden_field :height, :value => 0 %>
            <%= f.hidden_field :fat_percentage, :value => 0 %>
            <%= f.label :email, class: "control-label" %>
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: "control-label" %>
            <% if @minimum_password_length %>
                <em>(vähintään <%= @minimum_password_length %> merkkiä)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: "control-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit "Rekisteröidy", class: "submit-button" %>
          </div>
      <% end %>
      <hr>
      <div class="shared-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

