<div class="nested-fields">
  <div class="field">
    <%= f.label :category_for_product %><br>
    <%= f.select :category_for_product_ids, CategoryForProduct.all.collect { |x| [x.name, x.id] }, {}, :multiple => true %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :producer %><br>
    <%= f.text_field :producer %>
  </div>
  <div class="field">
    <%= f.label :calories %><br>
    <%= f.number_field :calories, max: 10000, min: 0 %>
  </div>
  <div class="field">
    <%= f.label :fat %><br>
    <%= f.number_field :fat, max: 100, min: 0, :step => 0.1 %>
  </div>
  <div class="field">
    <%= f.label :carbohydrate %><br>
    <%= f.number_field :carbohydrate, max: 100, min: 0, :step => 0.1 %>
  </div>
  <div class="field">
    <%= f.label :protein %><br>
    <%= f.number_field :protein, max: 100, min: 0, :step => 0.1 %>
  </div>
  <div class="field">
    <%= f.label :sugar %><br>
    <%= f.number_field :sugar, max: 100, min: 0, :step => 0.1 %>
  </div>
  <div class="field">
    <%= f.label :weight %><br>
    <%= f.number_field :weight, max: 5000, min: 0 %>
  </div>
  <%= link_to_remove_association "poista", f %>
</div><br>