<h1>Ateriasi</h1>

<table>
  <thead>
    <tr>
      <th>Nimi</th>
      <th>Kuvaus</th>
      <th>Julkinen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.name %></td>
        <td><%= meal.description %></td>
        <td><%= meal.private %></td>
        <td><%= link_to 'Näytä', meal %></td>
        <td><%= link_to 'Muokkaa', edit_meal_path(meal) %></td>
        <td><%= link_to 'Poista', meal, method: :delete, data: { confirm: 'Oletko varma?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Luo uusi ateria', new_meal_path %>
