<h1>Tuotteet</h1>

<table>
  <thead>
    <tr>
      <th>Nimi</th>
      <th>Valmistaja</th>
      <th>Kaloreita</th>
      <th>Rasvaa / 100g</th>
      <th>Hiilihydraatteja / 100g</th>
      <th>Proteiinia / 100g</th>
      <th>Sokeria / 100g</th>
      <th>Paino</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.producer %></td>
        <td><%= product.calories %></td>
        <td><%= product.fat %></td>
        <td><%= product.carbohydrate %></td>
        <td><%= product.protein %></td>
        <td><%= product.sugar %></td>
        <td><%= product.weight %></td>
        <td><%= link_to 'Näytä', product %></td>
        <td><%= link_to 'Muokkaa', edit_product_path(product) %></td>
        <td><%= link_to 'Poista', product, method: :delete, data: { confirm: 'Oletko varma?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Uusi tuote', new_product_path %>